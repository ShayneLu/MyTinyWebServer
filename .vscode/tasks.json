{
    "version": "2.0.0",
    "tasks": [
      {
        "type": "shell",
        "label": "C/C++: g++ build active file",
        "command": "/usr/bin/g++",
        "args": [
            "-fdiagnostics-color=always",
            "-g",
            //以下方法适合编译单个文件。(注意：编译单个、多个文件不能同时成立)
            "${file}", //此句是让VSC只进行单个文件编译，不适合多个.cpp文件合并编译。

            //以下方法①可以编译多个文件。
            //使用时，先建立文件夹，把参与编译的文件移到同一个文件夹，不能有不参与编译的文件。在文件夹下建立binfile文件夹。

            // "${fileDirname}/*.cpp",//脚本当前工作目录(即脚本所在文件夹)内，所有编译该脚本用到的所有文件。

            //编译多个文件的方法②,把所有参与编译文件都写在下方。
            // "${fileDirname}/main.cpp",
            // "${fileDirname}/extern_variable_test.cpp",
            // "${fileDirname}/main.h",

            // "-I", //引入外部头文件
            // "C:/Program Files/Matplot++ 1.2.0/include",

            // "-L",
            // "C:/Program Files/Matplot++ 1.2.0/lib",
            // "C:/Program Files/Matplot++ 1.2.0/lib/Matplot++",

            // "-I",
            // "C:/Program Files/Matplot++ 1.2.0/include", // 引入 Matplot++ 头文件
            // "-L",
            // "C:/Program Files/Matplot++ 1.2.0/lib", // 指定库文件搜索路径
            // "C:/Program Files/Matplot++ 1.2.0/lib/Matplot++",
            // // "-lmatplot", // 链接 Matplot++ 库matplot.dll
            // // "-lnodesoup", // 链接 nodesoup 库
            "-o",
            "${fileDirname}/binFile/${fileBasenameNoExtension}.exe"
        ],
        "options": {
          "cwd": "${fileDirname}"
        },
        "problemMatcher": ["$gcc"],
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "detail": "Task generated by Debugger."
      }
    ]
  }
  